<%- include('../modules/head') -%>
<body class="stretched">

	<!-- Document Wrapper
	============================================= -->
	<div id="wrapper" class="clearfix">

    <%- include('../modules/header-lobby') -%>

		<!-- Content
		============================================= -->
		<section id="content">
      <div class="container clearfix" style="margin-top: 40px;">
        <div class="fancy-title title-border">
          <h3>Available Room</h3>
        </div>

        <div class="row bottommargin-sm clearfix">
          <div class="col-md-8 bottommargin">
            <!-- Portfolio Filter
            ============================================= -->
            <ul id="portfolio-filter" class="portfolio-filter clearfix" data-container="#portfolio">
              <li class="activeFilter"><a href="#" data-filter="*">Show All</a></li>
              <li><a href="#" data-filter=".pf-others">Others</a></li>
            </ul><!-- #portfolio-filter end -->

            <div class="clear"></div>

            <!-- Portfolio Items
            ============================================= -->
            <ul id="portfolio" class="testimonials-grid grid-5 clearfix">
            </ul>
          </div>
        </div>
      </div>
    </section><!-- #content end -->
    <input type="hidden" id="user" value="<%= user %>">
    <input type="hidden" id="room-status" value="<%= status %>">
    <input type="hidden" id="host" value="<%= host %>">

    <div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="error-1" aria-hidden="true" id="kickModal">
      <div class="modal-dialog modal-sm">
        <div class="modal-body">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
              <h4 class="modal-title" id="error-1">Room Not Available</h4>
            </div>
            <div class="modal-body text-center">
              <p class="">The room owner has decided to close the room so we brought you back to lobby.</p>
              <a href="#" class="button" data-dismiss="modal">Close</a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="error-2" aria-hidden="true" id="notRoomModal">
      <div class="modal-dialog modal-sm">
        <div class="modal-body">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
              <h4 class="modal-title" id="error-2">Room Not Found</h4>
            </div>
            <div class="modal-body text-center">
              <p class="">The room requested was not available.</p>
              <a href="#" class="button" data-dismiss="modal">Close</a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Create Room Modal -->
    <div class="modal fade" id="create-room" tabindex="-1" role="dialog" aria-labelledby="create-room-label" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-body">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
              <h4 class="modal-title" id="create-room-label">Create New Room</h4>
            </div>
            <div class="modal-body">
              <div class="col_full room-error" style="margin-bottom: 10px; display:none;">
                <div class="alert alert-danger">
                  <i class="icon-remove-sign"></i>
                  <span id="room-error">Error</span>
                </div>
              </div>
              <div class="col_full" style="margin-bottom: 10px;">
                <label for="room-id">Room ID:</label>
                <input type="number" id="room-id" name="room_id" value="" placeholder="(1 - 999)" class="form-control" />
              </div>

              <div class="col_full nobottommargin">
                <label for="room-name">Name:</label>
                <input type="text" id="room-name" name="room_name" value="" class="form-control" />
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary" id="c-room">Create</button>
            </div>
          </div>
        </div>
      </div>
    </div>

		<%- include('../modules/footer') -%>

  </div><!-- #wrapper end -->
  
	<!-- Go To Top
	============================================= -->
	<div id="gotoTop" class="icon-angle-up"></div>

  <%- include('../modules/script') -%>
  <script type="text/javascript" src="/assets/js/lobby.js"></script>
</body>
</html>