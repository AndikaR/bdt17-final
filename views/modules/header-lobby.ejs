<!-- Header
============================================= -->
<header id="header" class="sticky-style-2" style="height: 65px;">

  <div id="header-wrap">

    <!-- Primary Navigation
    ============================================= -->
    <nav id="primary-menu" class="style-2">

      <div class="container clearfix">

        <div id="primary-menu-trigger"><i class="icon-reorder"></i></div>

        <ul>
          <li class="current"><a href="#"><div>Profile</div></a></li>
          <li><a data-toggle="modal" data-target="#create-room" id="croom" href="#create-room"><div>Create Room</div></a></li>
        </ul>

        <!-- Logout
        ============================================= -->
        <ul class="pull-right">
          <li class="current"><a href="/logout"><div>Logout</div></a></li>
        </ul><!-- #logout end -->

      </div>

    </nav><!-- #primary-menu end -->

  </div>

</header><!-- #header end -->

<!-- Modal -->
<div class="modal fade" id="create-room" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-body">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title" id="create-room-label">Create New Room</h4>
        </div>
        <div class="modal-body">
          <div class="col_full room-error" style="margin-bottom: 10px; display:none;">
            <div class="alert alert-danger">
              <i class="icon-remove-sign"></i>
              <span id="room-error">Error</span>
            </div>
          </div>
          <div class="col_full" style="margin-bottom: 10px;">
            <label for="room-id">Room ID:</label>
            <input type="number" id="room-id" name="room_id" value="" placeholders="(1 - 999)" class="form-control" />
          </div>

          <div class="col_full nobottommargin">
            <label for="room-name">Name:</label>
            <input type="text" id="room-name" name="room_name" value="" class="form-control" />
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary" id="c-room">Create</button>
        </div>
      </div>
    </div>
  </div>
</div>